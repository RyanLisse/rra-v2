# CI/CD Environment Configuration Example
# Copy this file to .env.ci and update with your values

# Neon Database Configuration
NEON_API_KEY=your-neon-api-key
NEON_PROJECT_ID=your-project-id
NEON_DATABASE_URL=postgresql://user:pass@host/database?sslmode=require

# Branch Management
TEST_BRANCH_PREFIX=ci-test
TEST_BRANCH_LIFETIME_HOURS=2
BRANCH_POOL_SIZE=5
ENABLE_BRANCH_POOLING=true

# Performance Settings
MAX_PARALLEL_TESTS=4
TEST_TIMEOUT_MS=300000
ENABLE_TEST_CACHING=true
CACHE_TTL_HOURS=24

# Cost Optimization
MAX_BRANCHES_PER_DAY=50
ALERT_THRESHOLD_DOLLARS=10
CLEANUP_SCHEDULE="0 */6 * * *"

# Monitoring
ENABLE_PERFORMANCE_TRACKING=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL=devops@example.com

# Feature Flags
ENABLE_SMART_SHARDING=true
ENABLE_SELECTIVE_TESTING=true
ENABLE_COST_TRACKING=true

# Debug Settings
CI_DEBUG=false
VERBOSE_LOGGING=false
SAVE_TEST_ARTIFACTS=true